<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end"
    android:paddingHorizontal="12dp"  android:paddingVertical="4dp">    <LinearLayout
    android:id="@+id/messageBubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_message_sent"
    android:padding="8dp"  android:maxWidth="300dp"  android:elevation="1dp"  >

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="Attached media"/>

    <LinearLayout
        android:id="@+id/audioPlayerLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginBottom="4dp"  tools:visibility="visible">

        <ImageView
            android:id="@+id/playPauseButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play"
            app:tint="@color/chat_sent_text"  android:contentDescription="Play or pause audio" />

        <SeekBar
            android:id="@+id/audioSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/audioDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chat_sent_text"
            android:textSize="12sp"
            tools:text="0:15" />
    </LinearLayout>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/chat_sent_text"  android:textSize="16sp"
        android:padding="0dp"  tools:text="This is a message I sent." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp">  <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"  android:textColor="#B3FFFFFF"  tools:text="10:30 AM" />

        <ImageView
            android:id="@+id/messageStatusIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:contentDescription="Message status"
            app:tint="#B3FFFFFF" tools:src="@drawable/ic_double_tick" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>