<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.LonyiTrade.GoogleFiles" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/google_files_primary_accent</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/google_files_primary_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/google_files_background</item>
        <item name="colorSurface">@color/google_files_surface</item>
        <item name="colorOnSurface">@color/google_files_text_primary</item>

        <item name="android:statusBarColor">@color/google_files_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>

        <item name="android:windowBackground">?android:attr/colorBackground</item>

        <item name="materialCardViewStyle">@style/Widget.App.CardView.GoogleFiles</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>


    <style name="Widget.App.CardView.GoogleFiles" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/google_files_card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">@dimen/bottom_nav_icon_size</item>
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="itemTextColor">?attr/colorPrimary</item>

        <item name="itemRippleColor">@android:color/transparent</item>

        <item name="itemTextAppearanceActive">@style/Widget.App.BottomNavigationView.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/Widget.App.BottomNavigationView.TextAppearance</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Widget.App.BottomNavigationView.TextAppearance" parent="">
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="hintTextColor">@color/google_files_text_secondary</item>
        <item name="android:textColorHint">@color/google_files_text_secondary</item>
        <item name="boxStrokeColor">@color/google_files_card_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

</resources>